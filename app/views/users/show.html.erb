<h1 align="center">Your attendance information</h1>

<div class="col-md-8 col-md-offset-2">
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Code</th>
				<th>Name</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% current_user.registered_courses.each do |course| %>
				<tr>
					<td><%= course.code %></td>
					<td><%= course.name %></td>
					<td><%= link_to "View", course, class: "btn btn-sm btn-default"%>
				</tr>
			<% end %>
		</tbody>
	</table>
	<div align="center">
		<%= link_to "Register new course", new_registration_path, class: "btn btn-primary" %>
	</div>
</div>
